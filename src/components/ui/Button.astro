---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  text: string
  href?: string
  type?: string
  block?: boolean
  className?: string
}

const { text, href, type = 'default', block = false, className, ...attrs } = Astro.props
---

<a
  href={href}
  {...attrs}
  class=`block font-medium rounded-lg text-sm text-center cursor-pointer px-5 py-2.5 mr-2 mb-2 border border-brand-primary-700 focus:ring-4 focus:ring-brand-primary-900 ease-in-out duration-100 ${type === 'primary' ? 'text-white bg-brand-primary-700 hover:bg-brand-primary-800' : 'text-brand-primary-700 bg-white hover:bg-brand-primary-50'} ${block ? 'w-full' : 'w-fit'} ${className}`
>
  {text}
</a>
