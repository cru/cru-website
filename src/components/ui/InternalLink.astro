---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  href: string
  className?: string
}

const { href, className = '', ...attrs } = Astro.props
---

<a
  href={href}
  class={`cursor-pointer underline hover:decoration-4 hover:decoration-brand-primary-500 ${className}`}
  {...attrs}
>
  <slot />
</a>
