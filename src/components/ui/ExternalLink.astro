---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'a'> {
  href: string
  arrow?: boolean
  className?: string
}

const { href, arrow = true, className = '', ...attrs } = Astro.props
---

<a
  href={href}
  target='_blank'
  rel='noopener noreferrer'
  class={`cursor-pointer text-brand-primary-500 ${
    arrow && "after:content-['_â†—']"
  } ${className}`}
  {...attrs}
>
  <slot />
</a>
