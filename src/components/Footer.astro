---
import { Picture } from 'astro:assets'
import logoImage from '../assets/logo.png'
import uofcLogo from '../assets/partners/uofc.png'
import chiLogo from '../assets/partners/chi.png'
import ctaImage from '../assets/cta.svg'
import Button from './ui/Button.astro'
import ExternalLink from './ui/ExternalLink.astro'
import InternalLink from './ui/InternalLink.astro'
interface Props {}

const {} = Astro.props
---

<footer class='relative'>
  <div class='mx-auto absolute inset-0 -top-40 max-w-4xl sm:px-6 lg:px-8 h-fit'>
    <div class='relative overflow-hidden p-10 sm:shadow-2xl sm:rounded-3xl'>
      <div class='absolute inset-0 bg-gradient-to-br from-black to-gray-900/80'></div>
      <Picture
        src={ctaImage}
        alt='CTA image'
        class='absolute inset-0 h-full w-full object-cover'
      />
      <div class='relative text-white text-left'>
        <div class='max-w-xl space-y-8'>
          <h2>Supercharge your research</h2>
          <p class='text-white'>The data platform for research teams</p>
          <div class='mt-10'>
            <Button primary href='https://redcap.cru.ucalgary.ca/surveys/?s=7L49EPE94D'>
              Get started today
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <svg
    xmlns='http://www.w3.org/2000/svg'
    class='-mb-0.5 w-full'
    viewBox='0 0 1367.743 181.155'
  >
    <path
      class='fill-current text-gray-100'
      id='wave'
      data-name='wave'
      d='M0,0S166.91-56.211,405.877-49.5,715.838,14.48,955.869,26.854,1366,0,1366,0V115H0Z'
      transform='translate(1.743 66.155)'></path>
  </svg>

  <div class='bg-gradient-to-b from-gray-100 to-transparent pt-1'>
    <div class='container m-auto space-y-8 px-6 text-gray-600 md:px-12 lg:px-20'>
      <div class='grid grid-cols-8 gap-6 md:gap-0'>
        <div class='col-span-8 border-r mt-16 border-gray-100 md:mt-0 lg:col-span-2'>
          <div
            class='flex items-center justify-between gap-6 border-b border-white py-6 md:block md:space-y-6 md:border-none md:py-0'
          >
            <div class='flex flex-col space-y-4'>
              <Picture
                src={logoImage}
                formats={['avif', 'webp']}
                width={150}
                alt='logo'
                class='h-7 w-auto'
              />
              <Picture
                src={uofcLogo}
                formats={['avif', 'webp']}
                width={150}
                alt='uofc-logo'
                class='h-7 w-auto'
              />
              <div class='flex space-x-1'>
                <Picture
                  src={chiLogo}
                  formats={['avif', 'webp']}
                  width={150}
                  alt='logo'
                  class='h-7 w-auto'
                />
                <span class='font-bold text-black text-sm leading-4'
                  >Centre for Health <br />Informatics</span
                >
              </div>
            </div>
            <div class='flex gap-6'>
              <a
                href='https://github.com/cru'
                target='_blank'
                rel='noopener noreferrer'
                aria-label='github'
                class='hover:text-brand-primary-600'
              >
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  width='20'
                  height='20'
                  fill='currentColor'
                  class='bi bi-github'
                  viewBox='0 0 16 16'
                >
                  <path
                    d='M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z'
                  ></path>
                </svg>
              </a>
              <a
                href='https://www.twitter.com/ucalgary'
                target='_blank'
                rel='noopener noreferrer'
                aria-label='twitter'
                class='hover:text-brand-primary-600'
              >
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  width='20'
                  height='20'
                  fill='currentColor'
                  class='bi bi-twitter'
                  viewBox='0 0 16 16'
                >
                  <path
                    d='M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z'
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div class='col-span-8 lg:col-span-6'>
          <div class='grid grid-cols-1 gap-6 pb-16 sm:grid-cols-3 md:pl-16'>
            <div>
              <h6 class='text-lg font-medium text-gray-800'>Resources</h6>
              <ul class='mt-4 list-inside space-y-4'>
                <li>
                  <InternalLink href='/publications'>Publications</InternalLink>
                </li>
                <li>
                  <InternalLink href='/docs/REDCapProjectValidation_GuidanceDocument.pdf'>
                    Project Validation Guide
                  </InternalLink>
                </li>
              </ul>
            </div>
            <div>
              <h6 class='text-lg font-medium text-gray-800'>Discover</h6>
              <ul class='mt-4 list-inside space-y-4'>
                <li>
                  <ExternalLink
                    href='https://researchcalgary.atlassian.net/wiki/spaces/CCTSTRED/overview'
                  >
                    REDCap Resource Centre
                  </ExternalLink>
                </li>
                <li>
                  <ExternalLink
                    href='https://researchcalgary.atlassian.net/servicedesk/customer/portal/7'
                  >
                    CRU Service Desk
                  </ExternalLink>
                </li>
                <li>
                  <ExternalLink
                    href='https://careers.ucalgary.ca/jobs/search?utf8=%3F&q=cru&c_keywords=cru#results'
                  >
                    Careers
                  </ExternalLink>
                </li>
              </ul>
            </div>
            <div>
              <h6 class='text-lg font-medium text-gray-800'>Policies</h6>
              <ul class='mt-4 list-inside space-y-4'>
                <li>
                  <ExternalLink
                    href='https://www.ucalgary.ca/legal-services/university-policies-procedures/privacy-policy'
                  >
                    UofC Privacy Policy
                  </ExternalLink>
                </li>
                <li>
                  <ExternalLink
                    href='https://www.ucalgary.ca/legal-services/university-policies-procedures/acceptable-use-electronic-resources-and-information-policy'
                  >
                    Acceptable Use of Electronic Resources and Information
                  </ExternalLink>
                </li>
                <li>
                  <ExternalLink
                    href='https://www.ucalgary.ca/legal-services/university-policies-procedures/information-asset-management-policy'
                  >
                    Information Asset Management
                  </ExternalLink>
                </li>
                <li>
                  <ExternalLink
                    href='https://www.ucalgary.ca/legal-services/university-policies-procedures/health-information-management-policy'
                  >
                    Health Information Management
                  </ExternalLink>
                </li>
                <li>
                  <ExternalLink
                    href='https://www.ucalgary.ca/legal-services/university-policies-procedures/storage-inactive-clinical-research-records-policy'
                  >
                    Storage of Inactive Clinical Research Records
                  </ExternalLink>
                </li>
                <li>
                  <ExternalLink
                    href='https://www.ucalgary.ca/legal-services/access-information-privacy/operating-standards-guidelines-forms'
                  >
                    UofC Operating Standards, Guidelines & Forms
                  </ExternalLink>
                </li>
              </ul>
            </div>
          </div>
          <div class='flex justify-between border-t border-gray-100 py-4 pb-8 md:pl-16'>
            <span>&copy; University of Calgary {new Date().getFullYear()}</span>
            <span>All rights reserved</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
