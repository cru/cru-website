---
import { Dropdown as DropdownContainer, DropdownItems } from 'astro-navbar'

const { title, lastItem, children } = Astro.props
---

<span class="relative">
  <DropdownContainer class="group">
    <button
      class="flex items-center gap-1 py-2 text-sm leading-6 font-semibold text-gray-900"
    >
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="mt-0.5 h-3 w-3 group-open:rotate-180"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          'z-10 w-full lg:absolute lg:mt-2 lg:w-48',
          lastItem ? 'origin-top-right lg:right-0' : 'origin-top-left lg:left-0',
        ]}
      >
        <div
          class="flex flex-col px-1 py-1 lg:space-y-2 lg:rounded-lg lg:border lg:border-gray-100 lg:bg-white lg:shadow-sm"
        >
          {
            children.map((item) => (
              <a
                href={item.path}
                class="rounded-lg p-2 text-sm leading-6 font-semibold text-gray-900 hover:bg-gray-50"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</span>
