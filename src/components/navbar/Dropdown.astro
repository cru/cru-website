---
import { Dropdown as DropdownContainer, DropdownItems } from 'astro-navbar'

const { title, lastItem, children } = Astro.props
---

<span class='relative'>
  <DropdownContainer class='group'>
    <button
      class='flex items-center gap-1 text-sm font-semibold leading-6 text-gray-900 py-2'
    >
      <span>{title}</span>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='3'
        stroke='currentColor'
        class='w-3 h-3 mt-0.5 group-open:rotate-180'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M19.5 8.25l-7.5 7.5-7.5-7.5'></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          'lg:mt-2 lg:absolute w-full lg:w-48 z-10',
          lastItem ? 'lg:right-0 origin-top-right' : 'lg:left-0 origin-top-left',
        ]}
      >
        <div
          class='lg:space-y-2 px-1 py-1 lg:bg-white lg:rounded-lg lg:shadow lg:border lg:border-gray-100 flex flex-col'
        >
          {
            children.map((item) => (
              <a
                href={item.path}
                class='text-sm font-semibold leading-6 text-gray-900 hover:bg-gray-50 p-2 rounded-lg'
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</span>
