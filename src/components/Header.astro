---
import { Picture } from 'astro:assets'
import logoImage from '../assets/logo.png'
import ExternalLink from './ui/ExternalLink.astro'
import Button from './ui/Button.astro'

interface Props {}

const {} = Astro.props
---

<>
  <header class='absolute inset-x-0 top-0 z-50'>
    <nav class='flex items-center justify-between p-6 lg:px-8' aria-label='Global'>
      <div class='flex lg:flex-1'>
        <a href='/' class='-m-1.5 p-1.5'>
          <span class='sr-only'>Clinical Research Unit</span>
          <Picture
            src={logoImage}
            formats={['avif', 'webp']}
            width={200}
            alt='logo image'
            class='h-8 w-auto'
          />
        </a>
      </div>
      <div id='openNavBar' class='flex lg:hidden'>
        <button
          type='button'
          class='-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700'
        >
          <span class='sr-only'>Open main menu</span>
          <svg
            class='h-6 w-6'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            aria-hidden='true'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>
          </svg>
        </button>
      </div>
      <div class='hidden lg:flex lg:gap-x-12'>
        <a href='/data-capture' class='text-sm font-semibold leading-6 text-gray-900'
          >Data Capture</a
        >
        <a
          href='/methods-and-analytics'
          class='text-sm font-semibold leading-6 text-gray-900'>Methods & Analytics</a
        >
        <a href='/custom-software' class='text-sm font-semibold leading-6 text-gray-900'
          >Custom Software</a
        >
        <a href='/our-story' class='text-sm font-semibold leading-6 text-gray-900'
          >Our Story</a
        >
        <a href='/announcements' class='text-sm font-semibold leading-6 text-gray-900'
          >Announcements</a
        >
      </div>
      <div class='hidden lg:flex lg:flex-1 lg:justify-end'>
        <Button
          href='https://redcap.cru.ucalgary.ca/surveys/?s=7L49EPE94D'
          target='_blank'
          rel='noopener noreferrer'
          primary
          className='mr-0 mb-0'
        >
          Get started today
        </Button>
      </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div id='navBar' class='hidden lg:hidden' role='dialog' aria-modal='true'>
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class='fixed inset-0 z-50'></div>
      <div
        class='fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10'
      >
        <div class='flex items-center justify-between'>
          <a href='/' class='-m-1.5 p-1.5'>
            <span class='sr-only'>Clinical Research Unit</span>
            <Picture
              src={logoImage}
              formats={['avif', 'webp']}
              width={100}
              alt='logo image'
              class='h-8 w-auto'
            />
          </a>
          <button
            id='closeNavBar'
            type='button'
            class='-m-2.5 rounded-md p-2.5 text-gray-700'
          >
            <span class='sr-only'>Close menu</span>
            <svg
              class='h-6 w-6'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
              aria-hidden='true'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M6 18L18 6M6 6l12 12'></path>
            </svg>
          </button>
        </div>
        <div class='mt-6 flow-root'>
          <div class='-my-6 divide-y divide-gray-500/10'>
            <div class='space-y-2 py-6'>
              <a
                href='/data-capture'
                class='-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50'
                >Data Capture</a
              >
              <a
                href='/methods-and-analytics'
                class='-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50'
                >Methods & Analytics</a
              >
              <a
                href='/custom-software'
                class='-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50'
                >Custom Software</a
              >
              <a
                href='/our-story'
                class='-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50'
                >Our Story</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <script>
    const navBar = document.getElementById('navBar')
    const closeNavBar = document.getElementById('closeNavBar')
    const openNavBar = document.getElementById('openNavBar')

    closeNavBar?.addEventListener('click', toggleMenu)
    openNavBar?.addEventListener('click', toggleMenu)

    function toggleMenu() {
      navBar?.classList.toggle('hidden')
    }
  </script>
</>
