---
import { Picture } from 'astro:assets'
import heroImage from '../../assets/hero.svg'
import Button from '../ui/Button.astro'
import InternalLink from '../ui/InternalLink.astro'

interface Props {}

const {} = Astro.props
---

<section class="relative isolate overflow-hidden">
  <div class="from-brand-primary-100/20 absolute bg-linear-to-b"></div>
  <Picture
    src={heroImage}
    alt="Hero image"
    class="absolute inset-0 -z-10 h-full w-full object-cover"
  />
  <div class="mx-auto max-w-6xl pt-40">
    <div class="max-w-lg">
      <h1 class="primary mt-10 tracking-tight text-gray-900 sm:text-6xl">
        Better Data <br />Better Research
      </h1>
      <p class="mt-4 text-lg text-gray-600">
        We are on a mission to simplify end-to-end research data processes
      </p>
      <div class="mt-10 flex items-center gap-x-6">
        <Button primary href="/intake"> Get started today </Button>
        <InternalLink href="/data-capture/pricing">See pricing â†’</InternalLink>
      </div>
    </div>
  </div>
  <div class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-linear-to-t from-white sm:h-32">
  </div>
</section>
