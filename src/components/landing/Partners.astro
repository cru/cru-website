---
import { Picture } from 'astro:assets'
import csmLogo from '../../assets/partners/csm.png'
import ahsLogo from '../../assets/partners/ahs.png'
import redcapLogo from '../../assets/partners/redcap.png'

interface Props {}

const {} = Astro.props
---

<section
  class="mx-auto flex max-w-5xl flex-col items-center justify-center space-y-2 space-x-2 md:flex-row md:items-baseline"
>
  <div
    class="bg-opacity-5 hover:bg-opacity-10 rounded-xl border border-gray-200 bg-white px-4 py-2"
  >
    <Picture
      src={csmLogo}
      formats={['avif', 'webp']}
      height={100}
      alt="uofc-logo"
      class="h-14 w-fit object-contain contrast-0 transition hover:contrast-100"
    />
  </div>
  <div
    class="bg-opacity-5 hover:bg-opacity-10 rounded-xl border border-gray-200 bg-white px-4 py-2"
  >
    <Picture
      src={ahsLogo}
      formats={['avif', 'webp']}
      height={100}
      alt="ahs-logo"
      class="h-14 w-fit object-contain contrast-0 transition hover:contrast-100"
    />
  </div>
  <div
    class="bg-opacity-5 hover:bg-opacity-10 rounded-xl border border-gray-200 bg-white px-4 py-2"
  >
    <Picture
      src={redcapLogo}
      formats={['avif', 'webp']}
      height={100}
      alt="redcap-logo"
      class="h-14 w-fit object-contain contrast-0 transition hover:contrast-100"
    />
  </div>
</section>
