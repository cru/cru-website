---
import { Picture } from 'astro:assets'
import csmLogo from '../../assets/partners/csm.png'
import ahsLogo from '../../assets/partners/ahs.png'
import redcapLogo from '../../assets/partners/redcap.png'

interface Props {}

const {} = Astro.props
---

<section class='flex space-x-2 items-center justify-center mx-auto max-w-5xl'>
  <div
    class='rounded-xl border border-gray-200 bg-white bg-opacity-5 py-2 px-4 hover:bg-opacity-10'
  >
    <Picture
      src={csmLogo}
      formats={['avif', 'webp']}
      height={100}
      alt='uofc-logo'
      class='h-14 w-fit object-contain contrast-0 transition hover:contrast-100'
    />
  </div>
  <div
    class='rounded-xl border border-gray-200 bg-white bg-opacity-5 py-2 px-4 hover:bg-opacity-10'
  >
    <Picture
      src={ahsLogo}
      formats={['avif', 'webp']}
      height={100}
      alt='ahs-logo'
      class='h-14 w-fit object-contain contrast-0 transition hover:contrast-100'
    />
  </div>
  <div
    class='rounded-xl border border-gray-200 bg-white bg-opacity-5 py-2 px-4 hover:bg-opacity-10'
  >
    <Picture
      src={redcapLogo}
      formats={['avif', 'webp']}
      height={100}
      alt='redcap-logo'
      class='h-14 w-fit object-contain contrast-0 transition hover:contrast-100'
    />
  </div>
</section>
