---
import { Picture } from 'astro:assets'
import webappImage from '../../assets/webapp.jpg'
import dxImage1 from '../../assets/dx-screenshot1.jpg'
import dxImage2 from '../../assets/dx-screenshot2.jpg'
import dxImage3 from '../../assets/dx-screenshot3.jpg'
import dxImage4 from '../../assets/dx-screenshot4.jpg'
import dxImage5 from '../../assets/dx-screenshot5.jpg'
import dxImage6 from '../../assets/dx-screenshot6.jpg'
import spineImage1 from '../../assets/spine-screenshot1.jpg'
import spineImage2 from '../../assets/spine-screenshot2.jpg'
import spineImage3 from '../../assets/spine-screenshot3.jpg'
import spineImage4 from '../../assets/spine-screenshot4.jpg'
import spineImage5 from '../../assets/spine-screenshot5.jpg'
import spineImage6 from '../../assets/spine-screenshot6.jpg'
